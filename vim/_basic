"  emmet
"----------------------------------------------
" source $HOME/.vim/bundle/webapi-vim/autoload/webapi/json.vim
"let g:user_emmet_leader_key='<c-e>'
"let g:user_emmet_settings=webapi#json#decode(join(readfile(expand('$HOME/dotfiles/_snippets_custom.json')), "\n"))

